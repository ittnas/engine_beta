#ifndef COLLISION_OBJECT_HPP
#define COLLISION_OBJECT_HPP

#include "movable.hpp"
#include "render_flag.hpp"

class CollisionObject : public Movable {
private:
  GLuint accepted_target_collision_groups;
  GLuint collision_group_flag;
  GLuint preferred_bounding_volume;

public:
  void set_preferred_bounding_volume(BoundingVolumeType bvt) {this->preferred_bounding_volume = bvt;}
  BoundingVolumeType get_preferred_bounding_volume() const {return preferred_bounding_volume;}
  void set_collision_group_flag(GLuint collision_group_flag);
  GLboolean accept_collision(CollisionObject * co);
};

#endif
