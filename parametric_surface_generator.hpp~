#ifndef PARAMETRIC_SURFACE_OBJECT_HPP
#define PARAMETRIC_SURFACE_OBJECT_HPP

#define GLM_FORCE_RADIANS
#include <glm/glm.hpp>
#include <GL/glew.h>

class ParametricSurfaceObject {
private:
  ParametricSurfaceObject() {}
public:
  virtual glm::vec3 get_value_at(GLfloat u, GLfloat r) = 0;
};

class ParametricSphereGenerator : ParametricSurfaceObject {
public:
  ParametricSphere(glm::vec3 center, GLfloat radius, GLuint n);
};

#endif
