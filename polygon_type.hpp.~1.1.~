#ifndef POLYGON_TYPE_HPP
#define POLYGON_TYPE_HPP

enum PolygonType{TRIANGLE = GL_TRIANGLES,QUAD =GL_QUADS,POINTS = GL_POINTS, LINES = GL_LINES,POLYGON = GL_POLYGON, LINE_STRIP = GL_LINE_STRIP,LINE_LOOP = GL_LINE_LOOP,TRIANGLE_STRIP = GL_TRIANGLE_STRIP,TRIANGLE_FAN = GL_TRIANGLE_FAN,QUAD_STRIP = GL_QUAD_STRIP,LINES_ADJACENCY = GL_LINES_ADJACENCY,TRIANGLES_ADJACENCY = GL_TRIANGLES_ADJACENCY, TRIANBLE_STRIP_ADJACENCY = GL_TRIANGLE_STRIP_ADJACENCY};

#endif








